<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/Image1"
       android:layout_width="@dimen/rasm_150"
       android:layout_height="@dimen/rasm_150"
       android:layout_marginStart="@dimen/rasm_25"
       android:layout_marginTop="@dimen/rasm_60"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       tools:ignore="MissingConstraints"
       app:srcCompat="@drawable/svyat"
       android:contentDescription="@string/todo" />

   <ImageView
       android:id="@+id/Image2"
       android:layout_width="@dimen/rasm_150"
       android:layout_height="@dimen/rasm_150"
       android:layout_marginStart="@dimen/rasm_25"
       android:layout_marginTop="@dimen/rasm_60"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintTop_toTopOf="parent"
       android:paddingEnd="@dimen/help_otstup"
       tools:ignore="MissingConstraints,RtlSymmetry"
       app:srcCompat="@drawable/chetv"
       android:contentDescription="@string/todo" />

   <TextView
       android:id="@+id/text1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/rasm_60"
       android:fontFamily="@font/anton"
       android:text="@string/text1"
       android:textSize="@dimen/size_text"
       app:layout_constraintEnd_toEndOf="@id/Image1"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="@+id/Image1"
       app:layout_constraintTop_toBottomOf="@+id/Image1"
       tools:ignore="MissingConstraints" />

   <TextView
       android:id="@+id/text3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="270dp"
       android:fontFamily="@font/anton"
       android:text="@string/doublePoint"
       android:textSize="@dimen/size_text"
       app:layout_constraintEnd_toStartOf="@+id/text2"
       app:layout_constraintStart_toEndOf="@+id/text1"
       app:layout_constraintTop_toTopOf="parent" />

   <TextView
       android:id="@+id/text2"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/rasm_60"
       android:fontFamily="@font/anton"
       android:paddingEnd="@dimen/help_otstup"
       android:text="@string/text1"
       android:textSize="@dimen/size_text"
       app:layout_constraintEnd_toEndOf="@id/Image2"
       app:layout_constraintHorizontal_bias="0.5"
       app:layout_constraintStart_toStartOf="@+id/Image2"
       app:layout_constraintTop_toBottomOf="@+id/Image2"
       tools:ignore="MissingConstraints,RtlSymmetry" />

   <Button
       android:id="@+id/button1"
       android:layout_width="@dimen/rasm_150"
       android:layout_height="@dimen/otst_50"
       android:layout_marginTop="60dp"
       android:onClick="onClickBtnAddMar"
       android:text="@string/svyat"
       android:textSize="13sp"
       app:layout_constraintEnd_toEndOf="@+id/text1"
       app:layout_constraintHorizontal_bias="0.504"
       app:layout_constraintStart_toStartOf="@+id/text1"
       app:layout_constraintTop_toBottomOf="@+id/text1" />

   <Button
       android:id="@+id/button2"
       android:layout_width="@dimen/rasm_150"
       android:layout_height="@dimen/ots_50"
       android:layout_marginTop="@dimen/skip_60"
       android:onClick="onClickBtnAddfss"
       android:text="@string/BonPari"
       app:layout_constraintEnd_toEndOf="@+id/text2"
       app:layout_constraintHorizontal_bias="0.63"
       app:layout_constraintStart_toStartOf="@+id/text2"
       app:layout_constraintTop_toBottomOf="@+id/text2" />

   <Button
       android:id="@+id/button3"
       android:layout_width="200dp"
       android:layout_height="@dimen/skip_60"
       android:layout_marginTop="200dp"
       android:text="@string/nulling"
       android:onClick="onClickBtnAddDelete"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/text2" />












</androidx.constraintlayout.widget.ConstraintLayout>